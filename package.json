{
  "name": "typescript-runtime-validator",
  "version": "1.0.0",
  "description": "Advanced TypeScript runtime validation with zero-config type safety, framework integrations, and enterprise-grade transformation rules",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./express": {
      "import": "./dist/integrations/express.js",
      "types": "./dist/integrations/express.d.ts"
    },
    "./nextjs": {
      "import": "./dist/integrations/nextjs.js", 
      "types": "./dist/integrations/nextjs.d.ts"
    },
    "./react": {
      "import": "./dist/integrations/react.js",
      "types": "./dist/integrations/react.d.ts"
    },
    "./webpack": {
      "import": "./dist/plugin/webpack-plugin.js",
      "types": "./dist/plugin/webpack-plugin.d.ts"
    },
    "./vite": {
      "import": "./dist/plugin/vite-plugin.js",
      "types": "./dist/plugin/vite-plugin.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "typescript",
    "validation",
    "runtime",
    "type-safety",
    "express",
    "nextjs",
    "react",
    "middleware",
    "transformation",
    "schema",
    "type-guards"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/typescript-runtime-validator.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/typescript-runtime-validator/issues"
  },
  "homepage": "https://github.com/yourusername/typescript-runtime-validator#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:transformer": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit/transformer.test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist dist-test coverage",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "express": "^4.18.0",
    "jest": "^29.5.0",
    "next": "^13.5.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "webpack": "^5.100.2"
  },
  "dependencies": {
    "minimatch": "^10.0.3",
    "ts-morph": "^19.0.0"
  },
  "peerDependencies": {
    "express": ">=4.0.0",
    "next": ">=12.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  }
}
